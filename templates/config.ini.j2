[logging]
level = {{mr_provisioner_log_level}}
file = stdout

[ui]
banner_name = {{mr_provisioner_banner}}
# Maximum age of static assets before revalidation, defaults to 6 hours
max_age = 21600

[files]
tftp_root = {{mr_provisioner_tftp_root}}
# Leave empty to use built-in netboot templates
netboot_templates_dir =
max_upload_size = 1073741824

[tools]
ipmitool = {{mr_provisioner_ipmitool_path}}

[database]
uri = postgresql+psycopg2://{{mr_provisioner_db_user}}:{{mr_provisioner_db_pass}}@localhost/{{mr_provisioner_db_name}}

[controller]
# URI under which the controller can be accessed from the machines being
# provisioned.
access_uri = http://{{mr_provisioner_public_addr}}:{{mr_provisioner_public_port}}

[wssubprocess]
# Leave empty to autodetect host (i.e. use window.location.hostname)
ext_host =
ext_port = 8866

[provisioning]
# DNS server to provide as part of preseed/kickstart configuration. Leave
# empty to not set any nameserver (and instead rely on e.g. a DHCP-configured
# DNS setting)
preseed_dns =

[dhcp]
# externally reachable (by the machines being provisioned) address (or name)
# of the TFTP proxy
tftp_proxy_host = {{mr_provisioner_public_addr}}
default_bootfile = {{mr_provisioner_default_bootfile}}
